{
  "name": "monzo-mcp",
  "version": "1.0.2",
  "description": "MCP server for the Monzo banking API",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "monzo",
    "mcp",
    "model-context-protocol",
    "banking",
    "ai",
    "claude",
    "llm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samaxbytez/monzo-mcp.git"
  },
  "homepage": "https://github.com/samaxbytez/monzo-mcp#readme",
  "bugs": {
    "url": "https://github.com/samaxbytez/monzo-mcp/issues"
  },
  "bin": {
    "monzo-mcp": "build/index.js"
  },
  "files": [
    "build"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^22.16.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
